---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const researches = (await getCollection("research")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
);
---

<Layout>
  <div>
    <h1 class="border-b-2 border-zinc-800 mb-0">Researches</h1>
    <p>
      This page includes a list of completed research projects and papers,
      including work done independently as well as projects for university
      courses.
    </p>
    <ul transition:name="research">
      {
        researches.map((item) => (
          <li>
            <a href={`/researches/${item.slug}`}>{item.data.title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
